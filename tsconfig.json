{
  "extends": "@tsconfig/svelte/tsconfig.json",
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules/*"
  ],
  "compilerOptions": {
    "strict": true,
    "resolveJsonModule": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "module": "es2020",
    "moduleResolution": "node",
    "baseUrl": ".",
    "lib": [
      "ES2019",
      "ES2020",
      "ESNext"
    ],
    "types": [
      "node",
      "jest"
    ],
    "paths": {
      "~/*": [
        "src/*"
      ]
    }
  }
}